{
  "compilerOptions": {
    /* Basic Options */
    "jsx": "preserve",
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    // TODO: Not working?
    "newLine": "LF",
    "target": "es5",
    // TODO: I can't read "typings/declarations.d.ts" by tsconfig's "typeRoots" setting
    "typeRoots": [
      "../node_modules/@types",
      "../typings"
    ],
    /* Strict Type-Checking Options */
    "strict": true,
    /* Additional Checks */
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "../src"
  ]
}
